@using Otel.MVC.Models.Entity
@model List<Otel>
<div>
    
    <div style="text-align: center; color: darkslateblue; font-size: medium; font-size: 50px;">
        <br />
        <p>OTELİNİ SEÇ YOLCULUĞA ÇIK</p>
    </div>

    <br />

</div>
@foreach (var x in Model)
{
    <br />
    <div style="color:black; font-size:medium;">@x.OtelID.@x.OtelAdi</div>
    <br />
    
    <td><img src="@Url.Content(x.OtelResım)" width="800" height="500" alt="Otel Resmi" /></td>
    <br />
    <br />
    
    <div style="border: 5px solid #000; padding:3px; background-color:lightblue;">


        @{
            var aciklama = x.Aciklama;
            var kisaltilmisAciklama = aciklama.Length <= 140 ? aciklama : aciklama.Substring(0, 140);
        }
        @kisaltilmisAciklama
        @if (aciklama.Length > 140)
        {
            <a href="@Url.Action("Index", "OTELLER", new { id = x.OtelID })">Devamını Oku</a>
        }
    </div>
}
